<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">

            <RelativeLayout
                android:id="@+id/laout_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="65dp"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingTop="30dp"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/name_food_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:text="Gole etli Doner"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/food_star_image1_show"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/food_star_image2_show"
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/food_star_image3_show"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/food_star_image4_show"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/food_star_image5_show"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/star_icon" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/price_food_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:text="33 TMT"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="17dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="90dp"
            android:layout_height="95dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imag_food_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:riv_corner_radius="15dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginRight="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="false">

            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/color_white_circle"
                android:elevation="7dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/add_count"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plus_icon"
                    android:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="4dp"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="17dp" />

                <ImageView
                    android:id="@+id/remove_count"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:padding="4dp"
                    android:src="@drawable/minus_icon"
                    android:tint="?attr/colorPrimary" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>