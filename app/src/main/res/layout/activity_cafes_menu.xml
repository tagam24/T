<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/triangle"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="-3dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?attr/colorPrimary">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/back_icon" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:text="Galkynys Naharhana"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"/>
                <ImageView
                    android:id="@+id/info"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/info_icon" />
            </RelativeLayout>
    </com.dd.ShadowLayout>


        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:tabBackground="@drawable/tab_background"
            android:background="@android:color/transparent"
            android:elevation="10dp"
            app:tabGravity="center"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabMode="fixed"
            android:layout_marginBottom="5dp"
            app:tabTextAppearance="@style/TabLayoutStyle_norm"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="@android:color/black" />
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dp"
          />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ashaky"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="?attr/colorPrimary">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="44"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/home"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/home_white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/heart"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/heart_white" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="44">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="44"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/location"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/map_white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/user"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/user_white" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true">

            <android.support.v7.widget.CardView
                android:id="@+id/layout_karzina1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                app:cardUseCompatPadding="false"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardCornerRadius="27dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="26dp">

                        <ImageView
                            android:id="@+id/karzina"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="9dp"
                            android:src="@drawable/cart_icon"
                            android:tint="?attr/colorPrimary" />
                    </android.support.v7.widget.CardView>
                </RelativeLayout>


            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="3"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignTop="@id/layout_karzina1"
                android:layout_alignRight="@+id/layout_karzina1"
                android:background="@drawable/red_circle"
                android:text="34"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:elevation="2dp"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>