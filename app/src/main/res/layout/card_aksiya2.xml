<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="25dp"
            android:background="@android:color/white"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">

            <RelativeLayout
                android:id="@+id/laout_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white">




                <ImageView
                    android:id="@+id/like"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/heart_bos"
                    android:tint="?attr/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingTop="25dp"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/name_food_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:text="Gole etli Doner"
                        android:textColor="@android:color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/l_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/star_icon" />

                        <ImageView
                            android:id="@+id/star5"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/star_white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/price_food_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:text="33 manat"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="17dp"
                        android:textStyle="bold" />


                </LinearLayout>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"

                    android:scaleType="fitXY"
                    android:src="@drawable/aksiya_star"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/aksiya_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="-20%"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_margin="10dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="false">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imag_food_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"

                android:scaleType="fitCenter"
                app:riv_corner_radius="15dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/add_to_cart"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/image_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="9dp"
                android:src="@drawable/plus_icon"
                android:tint="?attr/colorPrimary" />

        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>